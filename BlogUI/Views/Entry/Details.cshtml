@model Common.UI.IDisplayEntry

@{
    ViewBag.Title = "Umysł zamknięty";
    ViewBag.BgImage = @"../../img/logo.jpg";
    ViewBag.SubTitle = "Whatever you're thinking, think bigger";
    ViewBag.SubHeading = "Tony Hsieh";
}

<div class="row">
    <article class="col-lg-10 col-md-8 mx-auto">
        <section class="entry">
            <section id="entry-header">
                <h3>
                    @Html.DisplayFor(model => model.Entry.Title, "UpperFirstSign")
                </h3>
            </section>

            <section id="entry-body">
                <p>
                    @Html.DisplayFor(model => model.Entry.Body, "DisplayHtml")  
                </p>
            </section>

            <section id="entry-footer">
                <p align="right">
                    @Html.DisplayFor(model => model.Entry.Timestamp, "UpperDateFirstSign")
                </p>
            </section>

            <section class="add-comment">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                @{
                    Html.RenderAction("Create", "Comment", Model.NewComment);
                }
            </section>

            <br /><hr />

            <section class="comments">
                @{
                    Html.RenderPartial("~/Views/Comment/Comments.cshtml", Model.Entry.Comments);
                }
            </section>

            <p>
                @Html.ActionLink("Back to List", "Index", "Home")
            </p>
        </section>
    </article>
</div>