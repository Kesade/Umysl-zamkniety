@using BlogUI.Controllers
@model ICollection<Common.DomainEntities.ICommentDomainEntity>
@{
    Layout = null;
}
@foreach (var item in Model)
{
    <div id="comment">
        <blockquote class="comment">
            <h6 class="post-subtitle">
                Posted by @Html.DisplayFor(modelItem => item.Author.Name, "Colour")
                on @Html.DisplayFor(modelItem => item.Timestamp)
            </h6>
            <hr/>
            <p>
                @Html.DisplayFor(modelItem => item.Body)
            </p>
            @{ Html.RenderPartial("~/Views/Comment/Delete.cshtml", new DeleteComment {Author = item.Author, Id = item.Id, ParrentId = item.ParrentId}); }
        </blockquote>

        @if (Model.Last() != item)
        {
            <hr/>
        }
    </div>
}