@model Common.UI.ICreateComment
@{
    Layout = null;
}
<div>
    @using (Html.BeginForm("CreateComment", "Entry", FormMethod.Post, null))

    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.ParrentId)
        <div class="form-horizontal">
            <div class="form-group floating-label-form-group">
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Body, new {style = "width:115%", id = "autosize", placeholder = "Share your opinion", @class = "form-control"})
                    @Html.ValidationMessageFor(model => model.Body, "", new {@class = "text-danger"})
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="fa-pull-right">
                        @* @Html.Partial("_Recaptcha")*@
                    </div>
                    <input type="submit" value="Post comment." class="btn btn-default"/>
                </div>
            </div>
        </div>
    }
    <br/>
</div>